#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");
    int number, base;
    cout << "Введите число: ";
    cin >> number;
    cout << "Введите систему счисления (2-16): ";
    cin >> base;

    if (base < 2 || base > 16) {
        cout << "Ошибка!" << endl;
        return 0;
    }

    char digits[] = "0123456789ABCDEF";
    char result[64];
    int i = 0;

    if (number == 0) {
        cout << "0" << endl;
        return 0;
    }

    while (number > 0) {
        result[i++] = digits[number % base];
        number /= base;
    }

    for (int a = i - 1; a >= 0; a--) {
        cout << result[a];
    }
    cout << endl;

    return 0;
}
